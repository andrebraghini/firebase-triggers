{
  "name": "firebase-decorator",
  "version": "0.0.1",
  "description": "TypeScript decorators to assign Firebase triggers to regular methods",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrebraghini/firebase-decorator.git"
  },
  "keywords": [
    "firebase",
    "firestore",
    "cloud functions",
    "serverless",
    "pubsub",
    "microservice",
    "trigger",
    "decorator"
  ],
  "author": "Andre Braghini",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrebraghini/firebase-decorator/issues"
  },
  "homepage": "https://github.com/andrebraghini/firebase-decorator#readme",
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "jest": "^26.6.1",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.5"
  }
}
